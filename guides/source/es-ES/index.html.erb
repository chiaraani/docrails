<% content_for :page_title do %>
Guías de Ruby on Rails
<% end %>

<% content_for :header_section do %>
<%= render 'welcome' %>
<% end %>

<% content_for :index_section do %>
<div id="subCol">
  <dl>
    <dt></dt>
    <dd class="kindle">Las Guías Rails también están disponibles en versión <%= link_to 'Kindle', @mobi %>.</dd>
    <dd class="work-in-progress">Las Guías marcadas con este símbolo están actualmente están funcionando pero no están disponibles en el menú principal de las Guías. Mientras siguen siendo útiles, pueden contener información incompleta e incluso errores. Puedes ayudar revisándolas y publicando tus comentarios y correcciones.</dd>
  </dl>
</div>
<% end %>

<% documents_by_section.each do |section| %>
  <h3><%= section['name'] %></h3>
  <dl>
    <% section['documents'].each do |document| %>
      <%= guide(document['name'], document['url'], work_in_progress: document['work_in_progress']) do %>
        <p><%= document['description'] %></p>
      <% end %>
    <% end %>
  </dl>
<% end %>
